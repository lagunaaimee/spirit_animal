<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1><center>{{msg}}</center></h1>
        <h2><center>Please fill out your user details below:</center></h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="userID">Username:</label>
            <input type="text" id="userID" class="form-control" aria-describedby="userID" placeholder="Type Username Here">
          </div>
          <div class="form-group">
            <label for="userEmail">Email:</label>
            <textarea class="form-control" id="userEmail" aria-describedby="userEmail" placeholder="Type Email Here"></textarea>
          </div>
          <div class="form-group">
            <label for="userImage">Spirit Animal Image:</label>
            <textarea class="form-control" id="userImage" aria-describedby="userImage" placeholder="Paste Spirit Animal Image URL Here"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Temporary Visual Representation of our database answers:</h3>
        <ul id="users-list" class="list-group">
          {{#each users}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="users/{{this.id}}">{{this.userID}}</a>
            <button class="btn btn-danger float-right delete">X</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
